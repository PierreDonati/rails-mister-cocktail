<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1><%= @cocktail.name %></h1>
      <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
      <%= image_tag @cocktail.photo.url(:bright_face) %>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %> of <%= dose.ingredient.name %>
          <%= link_to "delete", dose_path(dose), method: :delete %> </li>
        <% end %>
      </ul>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient %>
        <%= f.submit %>
      <% end %>
      <%= link_to 'Back', cocktails_path %>
    </div>
  </div>
</div>

