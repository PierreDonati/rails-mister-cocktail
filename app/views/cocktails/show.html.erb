<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 text-center">
      <h1><%= @cocktail.name %></h1>
      <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :thumb %>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %> of <%= dose.ingredient.name %>
          <%= link_to "delete", dose_path(dose), method: :delete %> </li>
        <% end %>
      </ul>

      <h4>Add a new dose!</h4>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description, class: "form-control" %>
        <%= f.association :ingredient, class: "form-control" %>
        <%= f.submit %>
      <% end %>

    </div>
  </div>
</div>


